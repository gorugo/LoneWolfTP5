script(type='text/javascript', src="/javascript/controlleurs/controlleurStats.js")
section#stats(ng-app="statsApp", ng-controller="controlleurStats")
    p Feuille d'Aventure
    table
        tbody
            tr
                td
                    p Nom du joueur :
                td
                    {{joueur.nom}}
            tr
                td
                    img(src="/images/points_endurance.png")
                td
                    p #[span#endurance_restante {{joueur.enduranceBase}}] / #[span#endurance_total {{joueur.endurancePlus}}]
            tr
                td
                    img(src="/images/points_habilete.png")
                td
                    p#habilete {{joueur.habiletePlus}}
            tr
                td
                    img(src="/images/pieces_or.png")
                td
                    p #[span#pieceOr {{joueur.pieceOr}}] / #[span#endurance_total 50]
    div
        p Disciplines Kai
        ul#disciplines(ng-repeat="discipline in joueur.disciplines")
          li - {{discipline}}

    p
        a.button(href="#sacADos") Sac à dos
    div#sacADos
        a#fermerSacADos(href="#")
        img(src="/images/backpack.png")
        div
            div
                p Objets
                ul(ng-repeat="objet in joueur.objets")
                  li {{objet}}
            div
                p Objets Spéciaux
                ul(ng-repeat="objetSpecial in objetsSpeciaux")
                  li {{objetSpecial}}
